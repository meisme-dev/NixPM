{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/run/current-system/sw/bin/gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "-std=c99",
                "-pedantic",
                "-g",
                "${file}",
                "-o",
                "bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}